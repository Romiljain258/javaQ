import java.util.Scanner;
public class Main
{
    public static void main(String[] args) 
	{
	  Scanner obj=new Scanner(System.in);
	  int T=obj.nextInt();
	
	  while(T>0)
	  {
		  int b=obj.nextInt();
		  int a=obj.nextInt();
		  
	      int h;
	      if(a%b==0) {
	      h=(2*a)/b;
		  System.out.println(h);}
	      else
	      {
	    	  h=(2*a)/b;
		  System.out.println(h+1);
          }
		  T--;
	  }
		  
	     
	  

	}

}
